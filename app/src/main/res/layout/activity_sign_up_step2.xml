<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up_step2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="thuyhien.layoutanduicontrol.SignUpStep2Activity">

    <TextView
        android:id="@+id/txt_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_seek_bar_value" />

    <include layout="@layout/seekbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_vertical"
        android:text="@string/title_sport" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_vertical"
        android:stretchColumns="*">

        <TableRow>

            <CheckBox
                android:id="@+id/ckb_football"
                android:text="@string/title_ckb_football" />

            <CheckBox
                android:id="@+id/ckb_tennis"
                android:text="@string/title_clb_tennis" />

            <CheckBox
                android:id="@+id/ckb_ping_pong"
                android:text="@string/title_ckb_ping_pong" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/spacing_vertical">

            <CheckBox
                android:id="@+id/ckb_swimming"
                android:text="@string/title_ckb_swimming" />

            <CheckBox
                android:id="@+id/ckb_volleyball"
                android:text="@string/title_ckb_volleyball" />

            <CheckBox
                android:id="@+id/ckb_basketball"
                android:text="@string/title_ckb_basketball" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_done"
        style="@style/CommonButtonTheme"
        android:text="@string/action_done" />
</LinearLayout>
